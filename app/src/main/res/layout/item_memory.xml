<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_memory_item"
    android:padding="16dp"
    android:layout_marginBottom="12dp">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Memory Title"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/memoir_olive"
        android:layout_marginBottom="4dp"/>

    <TextView
        android:id="@+id/tvDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Date Placeholder"
        android:textSize="12sp"
        android:textStyle="italic"
        android:textColor="@color/memoir_slate"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Memory description preview..."
        android:textColor="@color/memoir_dark"
        android:maxLines="2"
        android:ellipsize="end"/>

</LinearLayout>